\bibliographystyle{LTU-Report-Theme/IEEEtran}

% Header and footer styling
\pagestyle{fancy}
\fancyhead{}
\fancyfoot{}

% Define command for header left
\newcommand{\headerleft}[1]{
	\fancyhead[L]{#1}
}

% Define command for header right
\newcommand{\headerright}[1]{
	\fancyhead[R]{#1}
}

% Redefine make title to add image
\let\oldmaketitle\maketitle
\renewcommand{\maketitle}{
	\oldmaketitle
	\thispagestyle{fancy}

	\begin{figure}
		\center
		\ifdefined\DARKMODE
			\ifdefined\HIGHRES
				\includegraphics[width=0.4\textwidth]{LTU-Report-Theme/img/ltu_logo_en_dark_highres.png}
			\else
				\includegraphics[width=0.4\textwidth]{LTU-Report-Theme/img/ltu_logo_en_dark.png}
			\fi
		\else
			\ifdefined\HIGHRES
				\includegraphics[width=0.4\textwidth]{LTU-Report-Theme/img/ltu_logo_en_light_highres.png}
			\else
				\includegraphics[width=0.4\textwidth]{LTU-Report-Theme/img/ltu_logo_en_light.png}
			\fi
		\fi
		\vspace*{10mm}
	 \end{figure}

	\clearpage
}

